extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action=`/admin/${editing === 'true' ? 'edit' : 'add'}-product`, method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", id="title", value= (editing === 'true' ? product.title : ''))
            .form-control
                label(for="imageUrl") Image URL
                input(type="text", name="imageUrl", id="imageUrl", value= (editing === 'true' ? product.imageUrl : ''))
            .form-control
                label(for="price") Price
                input(type="text", name="price", id="price", step="0.01", value= (editing === 'true' ? product.price : ''))
            .form-control
                label(for="description") Description
                textarea(name="description", id="description", rows="5") #{editing === 'true' ? product.description : ''}
            button.btn(type="submit") #{editing === 'true' ? 'Update' : 'Add'} Product
            